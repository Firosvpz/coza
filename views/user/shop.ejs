                                    Quick View
                                </a>

                                <div>
                                    <% if (product.offer) { %>
                                        <span class="status text-light badge badge-danger  rounded-pill p-1 "
                                            style="position: absolute;top: 10px;left: 210px;">
                                            <%= product.offer.percentage %>% off
                                        </span>
                                        <% } else if (categories.length> 0) { %>
                                            <% for (let i=0; i < categories.length; i++) { %>

                                                <% if (categories[i].offer &&
                                                    categories[i].categoryName===product.category) { %>
                                                    <span
                                                        class="status text-white badge  badge-danger rounded-pill p-1 "
                                                        style="position: absolute;top: 10px;left: 210px;">
                                                        <%= categories[i].offer.percentage %>% off
                                                    </span>
                                                    <% } %>
                                                        <% } %>
                                                            <% } %>

                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <div class="block2-txt-child1 flex-col-l">
                                        <span class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 ">
                                            <%= product.name %>
                                        </span>

                                        <% if (product.offer) { var discount=(product.price * product.offer.percentage /
                                            100).toFixed(0); } else { var discount=0; } %>

                                            <% if (categories.length> 0) { %>
                                                <% categories.forEach(category=> { %>
                                                    <% if (category.offer && category.categoryName===product.category)
                                                     { discount=(product.price *
                                                        category.offer.percentage / 100).toFixed(0); } %>
                                                        <% }) %>
                                                            <% } %>

                                                                <% if (discount> 0) { %>
                                                                    <span class="mb-0 stext-105 cl3 "> <del
                                                                            class="text-danger text-decoration-line-through">₹
                                                                            <%= product.price %>
                                                                        </del>
                                                                        <span class="price stext-105 cl3 ">₹ <%=
                                                                                product.price - discount %>
                                                                                <span class="badge badge-success"
                                                                                    style="position: absolute;bottom: 70px;left: 5px;">Save
                                                                                    ₹ <%= discount %></span>
                                                                        </span></span>
                                                                    <% } else { %>
                                                                        <span class="stext-105 cl3">
                                                                            ₹<%= product.price %>
                                                                        </span>
                                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3>No products available</h3>
                            <% } %>
