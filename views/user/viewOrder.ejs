        function getStatusText(status) {
            switch (status) {
                case 'cancelled':
                    return 'Cancelled';
                case 'request_cancellation':
                    return 'Cancellation Requested';
                case 'request_return':
                    return 'Return Requested';
                case 'returned':
                    return 'Returned';
                case 'delivered':
                    return 'Delivered';
                case 'shipped':
                    return 'Shipped'; // Add a case for "shipped"
                case 'placed':
                    return 'Placed'; // Add a case for "placed"
                default:
                    console.log('Unknown Status:', status);
                    return 'Unknown';
            }
        }
        %>
        
        <%
        function getProgressBarWidth(status) {
            let width;
            switch (status) {
                case 'cancelled':
                    width = '25%';
                    break;
                case 'request_cancellation':
                case 'request_return':
                    width = '50%';
                    break;
                case 'returned':
                    width = '75%';
                    break;
                case 'delivered':
                    width = '100%';
                    break;
                case 'out_for_delivery':
                case 'shipped':
                    width = '50%';
                    break;
                case 'placed':
                    width = '25%';
                    break;
                default:
                    width = '0%';
                    console.log('Unknown Status:', status);
                    break;
            }
            console.log('Status:', status, 'Width:', width);
            return width;
        }
