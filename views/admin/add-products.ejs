    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get the file input element
            const fileInput = document.getElementById('productImage');

            // Get the image preview container
            const imagePreviewContainer = document.getElementById('imagePreview');

            // Add an event listener to the file input
            fileInput.addEventListener('change', function () {
                // Remove existing preview images
                imagePreviewContainer.innerHTML = '';

                // Loop through selected files and create image previews
                for (const file of fileInput.files) {
                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.className = 'img-sm img-thumbnail mr-2';
                    img.alt = 'Image Preview';
                    img.style.width = '80px';
                    img.style.height = '80px';
                    imagePreviewContainer.appendChild(img);
                }
            });
        });
    </script>
   
   
    <script>
        document.getElementById('productForm').addEventListener('submit', function (event) {
    event.preventDefault(); // Prevents the form from submitting by default

    // Get the price input value
    const priceInput = document.getElementById('priceInput');
    const price = parseFloat(priceInput.value); // Convert to a floating-point number

    // Validate the price
    if (isNaN(price) || price <= 0) {
        alert('Please enter a valid price greater than one.');
        priceInput.focus(); // Focus back on the price input
        return; // Stop further processing as validation failed
    }

    // Get the quantity input value
    const quantityInput = document.getElementById('quantityInput');
    const quantity = parseFloat(quantityInput.value); // Convert to a floating-point number

    // Validate the quantity
    if (isNaN(quantity) || quantity <= 0) {
        alert('Please enter a valid quantity greater than one.');
        quantityInput.focus(); // Focus back on the quantity input
        return; // Stop further processing as validation failed
    }

    // If both price and quantity are valid, you can proceed with form submission
    event.target.submit(); // Submit the form
});

