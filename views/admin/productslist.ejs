    <script>

        // Search jquery
        $(document).ready(function () {
            // When the user types in the search box
            $("#name-search").on("keyup", function () {
                var searchText = $(this).val().toLowerCase();

                // Loop through each table row
                $("table tbody tr ").each(function () {
                    var userName = $(this).find("td:eq(1)").text().toLowerCase(); // Get the user's name in lowercase

                    // If the user's name contains the search text, show the row; otherwise, hide it
                    if (userName.includes(searchText)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.toggle-product').forEach(function (button) {
                button.addEventListener('click', function () {
                    const productId = this.getAttribute('data-categ-id');
                    const currentAction = this.getAttribute('data-action');

                    // Prompt a confirmation dialog
                    Swal.fire({
                        title: 'Confirm',
                        text: `Are you sure you want to ${currentAction === 'list' ? 'list' : 'unlist'} this product?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes',
                        cancelButtonText: 'No'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // If confirmed, perform the action
                            updateProductStatus(productId, currentAction);
                            // Update button text or perform any other actions if needed
                            if (currentAction === 'list') {
                                this.textContent = 'Unlist';
                                this.setAttribute('data-action', 'unlist');
                                // Add or remove classes as necessary
                                this.classList.remove('btn-outline-info');
                                this.classList.add('btn-outline-info');
                            } else if (currentAction === 'unlist') {
                                this.textContent = 'List';
                                this.setAttribute('data-action', 'list');
                                // Add or remove classes as necessary
                                this.classList.remove('btn-outline-info');
                                this.classList.add('btn-outline-info');
                            }
                        }
                    });
                });
            });
        });



        // function update status
        function updateProductStatus(productId, action) {
            fetch(`/admin/products/${action}/${productId}`, {
                method: 'POST'
            })
                .then((response) => response.json())
                .then((data) => {
                    // update the ui
                    const statusElement = document.getElementById(`status_${productId}`)
                    if (data.products.isListed) {
                        console.log(data.products);
                        statusElement.innerHTML = '<span class="badge rounded-pill alert-warning">list</span>';
                    } else {
                        statusElement.innerHTML = '<span class="badge rounded-pill alert-success">unlist</span>';
                    }
                })
                .catch((error) => {
                    console.log('Error:', error);
                })
        }


    </script>

    <!-- Offer -->
    <script>
        function showModal(productId) {
            console.log('productid:', productId);
            $('#discountModal').modal('show');
            const offerElements = document.querySelectorAll('.modal-body.text-center');
            offerElements.forEach((element) => {
                element.onclick = function () {
                    const offerId = this.getAttribute('data-offerid');
                    enterOffer(offerId, productId);
                };
            });
        }

        async function enterOffer(offerId, productId) {
            $('#discountModal').modal('hide');
            const response = await axios.patch('/admin/applyProductOffer', { offerId, productId })
            if (response.data.success) {
                // Use SweetAlert for a more stylish alert
                Swal.fire({
                    title: 'Offer applied',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed || result.isDismissed) {
                        window.location = '/admin/products';
                    }
                });
            }
        }

        async function removeOffer(productId) {
            try {
                const isConfirmed = await Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, remove it!'
                });

                if (isConfirmed.isConfirmed) {
                    const response = await axios.patch('/admin/removeProductOffer', { productId })
                    if (response.data.success) {
                        window.location = '/admin/products'
                    }
                }
            } catch (error) {
                console.log(error.message);
            }
        }
    </script>






