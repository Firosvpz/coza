    <script>

        // Search jquery
        $(document).ready(function () {
            // When the user types in the search box
            $("#name-search").on("keyup", function () {
                var searchText = $(this).val().toLowerCase();

                // Loop through each table row
                $("table tbody tr").each(function () {
                    var userName = $(this).find("td:eq(1)").text().toLowerCase(); // Get the user's name in lowercase

                    // If the user's name contains the search text, show the row; otherwise, hide it
                    if (userName.includes(searchText)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });

        //  list category
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.toggle-product').forEach(function (button) {
                button.addEventListener('click', function () {
                    const categId = this.getAttribute('data-categ-id');
                    const currentAction = this.getAttribute('data-action');

                    // Display confirmation dialog before executing the action
                    Swal.fire({
                        title: 'Are you sure?',
                        text: `Do you want to ${currentAction === 'list' ? 'list' : 'unlist'} this category?`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, proceed!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Proceed with the action if confirmed
                            updateCategoryStatus(categId, currentAction);

                            // Update button text and classes for visual change
                            if (currentAction === 'list') {
                                this.textContent = 'Unlist';
                                this.setAttribute('data-action', 'unlist');
                                this.classList.remove('bg-success');
                                this.classList.add('btn-outline-success');
                            } else if (currentAction === 'unlist') {
                                this.textContent = 'List';
                                this.setAttribute('data-action', 'list');
                                this.classList.remove('btn-outline-success');
                                this.classList.add('bg-success');
                            }
                            // Show success message
                            Swal.fire(
                                'Updated!',
                                'Category has been updated.',
                                'success'
                            );
                        }
                    });
                });
            });
        });







        // function update status
        function updateCategoryStatus(categId, action) {
            fetch(`/admin/categories/${action}/${categId}`, {
                method: 'POST'
            })
                .then((response) => response.json())
                .then((data) => {
                    // update the ui
                    const statusElement = document.getElementById(`status_${categId}`)
                    if (data.category.isListed) {
                        console.log(data.category);
                        statusElement.innerHTML = '<span class="badge rounded-pill alert-warning">listed</span>';
                    } else {
                        statusElement.innerHTML = '<span class="badge rounded-pill alert-success">unlisted</span>';
                    }
                })
                .catch((error) => {
                    console.log('Error:', error);
                })
        }




        $(document).ready(function () {
            // Handle Delete button click using event delegation
            $(document).on('click', '.delete-category', function () {
                const categoryId = $(this).data('category-id');

                // Set the categoryId in the modal for reference
                $('#deleteCategoryModal').data('category-id', categoryId);

                // Show the modal
                $('#deleteCategoryModal').modal('show');
            });

            // Handle Confirm Delete button click
            $('#confirmDeleteBtn').on('click', function () {
                // Retrieve the categoryId from the modal
                const categoryId = $('#deleteCategoryModal').data('category-id');

                // Make a POST request to delete the category
                fetch(`/admin/categories/deletecategory/${categoryId}`, {
                    method: 'POST',
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Perform actions after successful deletion
                            console.log('Category deleted successfully');

                            // Redirect to the categories page
                            window.location.href = '/admin/categories';
                        } else {
                            // Handle deletion failure
                            console.error('Deletion failed');
                        }
                    })
                    .catch(error => {
                        // Handle fetch error
                        console.error('Fetch error:', error);
                    });
            });
        });

